{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tukki/shared/ui": ["libs/shared/ui/index.ts"],
      "@tukki/shared/ui/header": ["libs/shared/ui/header/src/index.ts"],
      "@tukki/shared/ui/hero": ["libs/shared/ui/hero/src/index.ts"],
      "@tukki/shared/ui/promo": ["libs/shared/ui/promo/src/index.ts"],
      "@tukki/shared/ui/partials": ["libs/shared/ui/partials/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
